{
  "devDependencies": {
    "@types/google-apps-script": "^1.0.83",
    "esbuild": "^0.21.5",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "esbuild src/main.ts --bundle --banner:js=\"$(cat banner.js)\" --outdir=dist --format=iife --global-name=_entry",
    "deploy": "clasp push",
    "deploy:watch": "npx nodemon -e ts -w src/ --exec 'npm run build && npm run deploy'"
  }
}
